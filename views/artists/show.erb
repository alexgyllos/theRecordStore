<h1 style="text-transform: capitalize;"><%= @artist.name %></h1>

<div class="new-record">
  <% @artist.records().each do |record| %>
    <a href="/records/<%= record.id %>"><%= record.record_name %></a>
  <% end %>
</div>

<div class="new-record">
  <p><%= @artist.activity() %></p>
</div>

<div class="new-record">

  <a href="/artists/<%= @artist.id %>/edit">Edit Artist</a>

  <form action="/artists/<%= @artist.id %>/delete" method="post">
    <br>
    <button class="button" type="submit" name="button">Delete Artist</button>
  </form>

</div>
